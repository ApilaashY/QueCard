generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model card {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  card_set_id String    @db.Uuid
  question    String
  answer      String
  order       Int?
  card_sets   card_sets @relation(fields: [card_set_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_card_set")

  @@index([card_set_id], map: "idx_card_set_id")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model card_sets {
  id         String    @id(map: "pdf_flashcards_pkey") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  pdf_hash   String    @unique(map: "pdf_flashcards_pdf_hash_key") @db.VarChar(64)
  file_name  String
  file_size  Int?
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  owner      String?   @db.Uuid
  title      String    @default("")
  card       card[]
  users      users?    @relation(fields: [owner], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([pdf_hash], map: "idx_pdf_hash")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model users {
  id        String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  Name      String?
  card_sets card_sets[]
}

model documents {
  id        BigInt                 @id @default(autoincrement())
  content   String?
  embedding Unsupported("vector")?
}
